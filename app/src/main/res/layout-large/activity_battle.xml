<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="visible">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/knight_ico"
            android:id="@+id/imageView"
            android:layout_weight="1"
            android:scaleX="-1"
            android:background="@android:color/background_dark" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:gravity="start"
            android:textAlignment="viewStart"
            android:text="Ваш ход"
            android:layout_margin="5dp"
            android:fontFamily="casual"
            android:textStyle="normal|bold"
            android:id="@+id/textView6" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal"
        android:background="@drawable/wall_tiled">

        <com.example.dima.deephearth.UnitButton
            app:srcCompat="@drawable/knight"
            android:id="@+id/UnitButton1"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:layout_height="wrap_content"
            android:scaleX="-1"
            android:visibility="visible"
            android:scaleY="1"
            android:scaleType="fitEnd"
            android:maxWidth="90dp"
            android:adjustViewBounds="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <com.example.dima.deephearth.UnitButton
            app:srcCompat="@drawable/knight"
            android:id="@+id/UnitButton3"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitEnd"
            android:background="@null"
            android:layout_height="wrap_content"
            android:scaleX="-1"
            android:visibility="visible"
            android:maxWidth="90dp"
            android:adjustViewBounds="true"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/UnitButton2"
            android:layout_toEndOf="@+id/UnitButton2" />

        <com.example.dima.deephearth.UnitButton
            app:srcCompat="@drawable/knight"
            android:id="@+id/UnitButton2"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitEnd"
            android:background="@null"
            android:layout_height="wrap_content"
            android:scaleX="-1"
            android:visibility="visible"
            android:adjustViewBounds="true"
            android:maxWidth="90dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/UnitButton1"
            android:layout_toEndOf="@+id/UnitButton1" />

        <com.example.dima.deephearth.UnitButton
            app:srcCompat="@drawable/knight"
            android:id="@+id/UnitButton4"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitEnd"
            android:background="@null"
            android:layout_height="wrap_content"
            android:scaleX="-1"
            android:visibility="invisible"
            android:maxWidth="90dp"
            android:adjustViewBounds="true"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/UnitButton3"
            android:layout_toEndOf="@+id/UnitButton3" />

        <com.example.dima.deephearth.UnitButton
            app:srcCompat="@drawable/knight"
            android:id="@+id/UnitButton8"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitEnd"
            android:background="@null"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:adjustViewBounds="true"
            android:maxWidth="90dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <com.example.dima.deephearth.UnitButton
            app:srcCompat="@drawable/knight"
            android:id="@+id/UnitButton7"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitEnd"
            android:background="@null"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:adjustViewBounds="true"
            android:maxWidth="90dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/UnitButton8"
            android:layout_toStartOf="@+id/UnitButton8" />

        <com.example.dima.deephearth.UnitButton
            app:srcCompat="@drawable/knight"
            android:id="@+id/UnitButton6"

            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitEnd"
            android:background="@null"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:maxWidth="90dp"
            android:adjustViewBounds="true"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/UnitButton7"
            android:layout_toStartOf="@+id/UnitButton7" />

        <com.example.dima.deephearth.UnitButton
            app:srcCompat="@drawable/knight"
            android:id="@+id/UnitButton5"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitEnd"
            android:background="@null"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:adjustViewBounds="true"
            android:maxWidth="90dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/UnitButton6"
            android:layout_toStartOf="@+id/UnitButton6" />


    </RelativeLayout>

    <com.example.dima.deephearth.UnitLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal"
        android:contextClickable="true"
        android:background="@drawable/border"
        android:id="@+id/unitLayout">

        <ImageView
            app:srcCompat="@drawable/knight_ico"
            android:id="@+id/imageView2"
            android:scaleType="fitCenter"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/black"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scaleX="-1" />

        <TextView
            android:text="Мечник Стэн | Здоровье : 10/10 | Мана : 100/100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:id="@+id/textView5"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="20sp"
            android:fontFamily="casual"
            android:background="@android:color/background_dark"
            android:gravity="center"
            android:textStyle="normal|bold"
            android:textAllCaps="false"
            android:textAlignment="center" />

        <TextView
            android:text="МОЩЬ : 10 \nЛВК : 10 \nЗАЩ : 33%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dmgDodgeTView"
            android:layout_alignParentBottom="true"
            android:textSize="14sp"
            android:fontFamily="casual"
            android:textAlignment="viewStart"
            android:textStyle="normal|bold"
            android:layout_below="@+id/imageView2"
            android:paddingTop="5dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/LCTView"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_toRightOf="@+id/LCTView"
            android:layout_alignTop="@+id/LCTView">

            <com.example.dima.deephearth.SkillButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/skillico"
                android:scaleType="fitCenter"
                android:elevation="0dp"
                android:id="@+id/skillButton1"
                android:padding="0dp" />

            <com.example.dima.deephearth.SkillButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0dp"
                app:srcCompat="@drawable/skillico"
                android:id="@+id/skillButton2"
                android:scaleType="fitCenter" />

            <com.example.dima.deephearth.SkillButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0dp"
                android:id="@+id/skillButton3"
                app:srcCompat="@drawable/skillico"
                android:scaleType="fitCenter" />

            <com.example.dima.deephearth.SkillButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0dp"
                android:id="@+id/skillButton4"
                app:srcCompat="@drawable/skillico"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <TextView
            android:text="УРН : 10  УКЛ : 10\nКРТ : 10% УДЧ : 10 \nСКР : 10  ТЧН : 10"
            android:id="@+id/LCTView"
            android:textStyle="normal|bold"
            android:fontFamily="casual"
            android:textAlignment="viewStart"
            android:gravity="start"
            android:layout_width="140dp"
            android:paddingTop="3dp"
            android:layout_alignBaseline="@+id/dmgDodgeTView"
            android:layout_alignBottom="@+id/dmgDodgeTView"
            android:layout_toRightOf="@+id/dmgDodgeTView"
            android:layout_toEndOf="@+id/dmgDodgeTView"
            android:layout_height="match_parent" />
    </com.example.dima.deephearth.UnitLayout>

</LinearLayout>