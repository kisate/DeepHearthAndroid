<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <com.example.dima.deephearth.HeroButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/button3"
        android:fontFamily="sans-serif-medium"
        android:background="@null"
        android:layout_alignBottom="@+id/icoView" />

    <ImageView
        app:srcCompat="@drawable/knight_ico"
        android:id="@+id/icoView"
        android:layout_height="40dp"
        android:layout_width="40dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameView"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/icoView"
        android:layout_toEndOf="@+id/icoView" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameView"
        android:layout_toRightOf="@+id/icoView"
        android:id="@+id/hpBar"
        android:minHeight="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/manaBar"
        android:minHeight="10dp"
        android:layout_below="@+id/hpBar"
        android:layout_toRightOf="@+id/icoView"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp" />

</RelativeLayout>